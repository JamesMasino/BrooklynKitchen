{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "ES6",
    "moduleDetection": "auto",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "paths": {
      "@components": ["./src/components"],
      "@materials": ["./src/materials"],
      "@shaders": ["./src/shaders"]
    },
    "sourceMap": true,
    "target": "ESNext",
    "types": ["vite-plugin-glsl/ext"]
  },
  "lib": ["ESNext"]
}
